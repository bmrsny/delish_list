<div class="shopping-list-select-box">
	<h2><%= current_user.name %>'s Shopping Lists</h2>
	<h3>Add a New Shopping List</h3>

	<div class="form-horizontal reg-form">
		<%= form_for (@shopping_list), url: shopping_list_index_path, method: :post do |f| %>
			
			<div class="form-group">
				<%= f.text_field :name, placeholder: "Enter a shopping list name", required: true  %>
			</div>	

			<div class="form-group">
				<% @recipe.ingredients.each do |ingredient| %>
					<%= f.hidden_field :ingredient, multiple: true, value: ingredient.id %>
				<% end %>
			</div>	
			
			<%= f.submit "Create new shopping list", class: "btn btn-default search-btn" %>
		<% end %>
	</div>

	<hr>	
	<h3>Select a shopping list</h3>
	<div>
		<% @shopping_lists.each do |shopping_list| %>
			<ul>
				<li class="inline-list">
					<%= shopping_list.name %>
					<%= render "/partials/shopping_list_ingredients", shopping_list: shopping_list, ingredients: @recipe.ingredients %>
					<hr>
			</li>	
			</ul>
		<% end %>
	</div>
</div>
